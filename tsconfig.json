{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "ES2020",
    "target": "ES2020",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  }
}